<?xml version="1.0"?>
        <!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
<class name="com.entities.StudGroup" table="STUD_GROUP">
    <id name="id" type="int">
        <column name="STUD_GROUP_ID" precision="5" scale="0" />
        <generator class="native" />
    </id>
    <property name="name" type="java.lang.String">
        <column name="GROUP_NAME" length="20"/>
    </property>
    <set name="stud" table="STUDENTS">
        <key column="STUD_GROUP_ID"/>
        <one-to-many class="com.entities.Students"/>
    </set>
    <set name="classes" table="classes_by_group" inverse="true" lazy="true" fetch="select">
        <key>
            <column name="STUD_GROUP_ID" not-null="true" />
        </key>
        <many-to-many entity-name="com.entities.Classes">
            <column name="ID" not-null="true" />
        </many-to-many>
    </set>
        </class>
        </hibernate-mapping>